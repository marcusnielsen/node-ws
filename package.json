{
  "name": "node-ws",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "tape build/**/*.test.js | faucet",
    "prebuild": "rimraf build/* && mkdir build/client && npm prune",
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel server -d build/server -s",
    "build:client": "browserify client/index.js -t babelify --outfile build/client/index.js && npm run build:client:assets",
    "build:client:assets": "cp client/index.html build/client/index.html",
    "start": "node build/server/index.js",
    "start-dev": "babel-node server/index.js",
    "live-reload": "live-reload --port 9091 build/",
    "watch:server": "nodemon -w server/ --ext '.' --exec 'npm run build && npm start'",
    "watch:test": "nodemon -w server/ --ext '.' --exec 'npm run test'",
    "watch:client:js": "nodemon -w client/ --ext '.' --exec 'watchify client/index.js -t babelify --outfile build/client/index.js'"
  },
  "author": "Marcus Nielsen",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "express": "^4.13.3",
    "faucet": "0.0.1",
    "immutable": "^3.7.5",
    "live-reload": "^1.1.0",
    "morgan": "^1.6.1",
    "nodemon": "^1.7.1",
    "react": "^0.13.3",
    "rimraf": "^2.4.3",
    "rx": "^4.0.0",
    "tape": "^4.2.1",
    "watchify": "^3.4.0",
    "ws": "^0.8.0"
  }
}
